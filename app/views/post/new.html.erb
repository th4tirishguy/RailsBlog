<div class="row">
	<div class="col-md-6">
		<%= form_for(@post, url: { action: 'new_post'}, method: :post) do |f| %>
			<%= f.label :title %></br>
			<%= f.text_field :title, :class => 'form-control' %></br>

			<%= f.label :body %></br>
			<%= f.text_area :body, :class => 'form-control', :rows => 9 %></br>
			<%= f.button "Submit Post", :class => 'btn btn-primary' %>
		<% end %>
	</div>
</div>
